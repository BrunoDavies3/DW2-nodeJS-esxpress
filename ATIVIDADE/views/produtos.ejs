<%- include ('partials/navbar.ejs') %>
<%- include('partials/header.ejs')%>
<br>
<div class="card-header text-center" style="font-size: 30px; font-family: 'Fruktur', cursive;">
    <h1>Catálogo de Produtos</h1>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <% produtos.forEach(produto => { %>
      <div class="col-md-3 mb-4">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= produto.imagem %>" alt="Imagem do produto">
          <div class="card-body">
            <h5 class="card-title"><%= produto.nome %></h5>
            <p class="card-text">Categoria: <%= produto.categoria %></p>
            <p class="card-text">Preço: R$ <%= produto.preco.toFixed(2) %></p>
            <a href="#" class="btn btn-success">Adicionar ao Carrinho</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include ('partials/footer.ejs') %>
